---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Pricing from '~/components/widgets/Pricing.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Agenda from '~/components/widgets/Agenda.astro';
import Stats from '~/components/widgets/Stats.astro';
import { headerData } from '~/navigation';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

import Speakers from '~/components/widgets/Speakers.astro';
import Brands from '~/components/widgets/Brands.astro';

const metadata = {
  title: 'ETH Bolivia 2023',
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    actions={[
      { variant: 'primary', target: '_blank', text: 'Get Started', href: 'https://github.com/onwidget/astrowind' },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1580481072645-022f9a6dbf27?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'AstroWind Hero Image',
    }}
  >
    <Fragment slot="title">
      Ethereum Bolivia 2023<br />
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
    Primera Hackathon de Blockchain en La Paz, Bolivia.

    </Fragment>
  </Hero2>

  <!-- Features2 Widget ************** -->

  <Features2
    title="¿Qué es Ethereum Bolivia 2023?"
    subtitle="Es un evento que reúne a expertos en el ecosistema Ethereum, programadores y entusiastas en La Paz. Un espacio para fomentar la educación, la colaboración, el intercambio de conocimiento y el desarrollo, si estás en tus primeros pasos en el mundo de Blockchain o que seas un experimentado entusiasta, aquí encontrarás un lugar para compartir tus ideas. "
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Impacto del evento"
    subtitle="Los siguientes indicadores reflejan los resultados de eventos organizados en universidades de La Paz en Septiembre de 2023."
    stats={[
      { title: 'Asistentes', amount: '200' },
      { title: 'Expertos', amount: '16' },
      { title: 'Comunidades aliadas & patrocinadores', amount: '10' },
      { title: 'Horas de charlas técnicas y no técnicas', amount: '30' },
      { title: 'Hackers', amount: '85' },
      { title: 'Proyectos', amount: '13' },
      { title: 'Premios', amount: '+1000$' },
    ]}
  />


  <!-- Brands Widget ****************** -->

  <Brands
    title="Patrocinadores"
    subtitle=""
    icons={[]}
    images={[
      {
        src: 'https://cdn.pixabay.com/photo/2015/05/26/09/37/paypal-784404_1280.png',
        alt: 'Ecosystem Support Program',
